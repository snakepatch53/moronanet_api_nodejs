doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="icon" href="/static/img/logo.png" type="image/x-icon")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css")
        title #{title} - Moronanet
        style.
            .background {

            }
            body {
                background-image: url("/static/img/banner.jpg");
                background-repeat: no-repeat;
                background-size: cover;
                background-position: center;
                display: flex;
                align-items: center;
                height: 100vh;
                backdrop-filter: blur(5px);
            }
            .form-c {
                background-color: rgba(255, 255, 255, 0.7);
            }
    body
        .container.py-5
            .row.justify-content-center.align-items-center.pt-5.pb-5
                .col-12.col-md-6.col-lg-4.p-5.shadow.rounded.text-primary.border.border-tertiary.form-c
                    h1.text-center.mb-5.text-primary Moronanet API
                    form#form(action="return false" method="POST")
                        .mb-3
                            i.fa-solid.fa-user.me-1
                            label(for="username" class="form-label") Username
                            input.form-control.form-control-lg.form-control-solid(type="text" id="username" name="user" placeholder="Username" required)
                        .mb-3
                            i.fa-solid.fa-lock.me-1
                            label(for="password" class="form-label") Password
                            input.form-control.form-control-lg.form-control-solid(type="password" id="password" name="pass" placeholder="Password" required)
                        button.btn.btn-primary.btn-lg.btn-block.mt-3.mb-3.btn-solid.btn-hover(type="submit") Login

    foot
        script(src="/static/js/query.js")
        script(src="/static/js/panel.login.js")